<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:background="@drawable/navbarback"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:weightSum="1">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fac_nav_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/fac_name_nav"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/fac_nav_profile"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView_nav"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/fac_name_nav"
        android:gravity="center"
        android:text="Faculty Locator"
        android:textColor="#ffffff" />

</RelativeLayout>
